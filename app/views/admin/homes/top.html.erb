<div class="container">
  <h3>注文履歴一覧</h3>
  <div class="row">
    <table>
      <tr>
        <th width="200">購入日時 </th>
        <th width="200">購入者 </th>
        <th width="200">注文個数 </th>
        <th width="200">注文ステータス</th>
      </tr>

      <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %>
          <%= order.created_at.strftime('%Y/%m/%d') %>&emsp;<%= order.created_at.strftime('%H:%M:%S') %>
          <% end %>
        </td>
        <td><%= order.name %></td>
        <td>
          <% total=0 %>
          <% order.order_details.each do |order_detail| %>
          <% total =total + order_detail.quantity %>
          <% end %>
          <%= total %>
        </td>
        <td><%= order.status_i18n %></td>
      </tr>
      <% end %>
    </table>
    <%= paginate @orders %>
  </div>
</div>
