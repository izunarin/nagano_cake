<div class="container">
  <h1>会員一覧</h1>
  <div class="row">
    <table>
      <thead>
        <tr class="border-top border-bottom">
          <th width="100">会員ID</th>
          <th width="150">氏名</th>
          <th width="250">メールアドレス</th>
          <th width="150">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr class="border-top border-bottom">
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %><%= customer.first_name %>
            <% end %>
            </td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_deleted == true %>
              有効
            <% else %>
              退会
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @customers %>
  </div>
</div>