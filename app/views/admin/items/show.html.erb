<div class="container">
  <h1>商品詳細</h1>
  <div class="row">


  <div class="w-50"><%= image_tag @item.image, size: "500x300" %></div>

    <table>
   <tr>
    <th><h4>商品名</h4></th>
    <td ><%= @item.name %></td>
   </tr>

   <tr>
    <th><h4>商品説明</h4></th>
    <td><%= h(@item.introduction).gsub(/\r/, "<br>").html_safe %></td>
   </tr>

   <tr>
    <th><h4>ジャンル</h4></th>
    <td><%= @item.genre.name %></td>
   </tr>

   <tr>
    <th><h4>税抜価格</h4></th>
    <td> <%= @item.price %>円</td>
   </tr>

  <tr>
    <th><h4>販売ステータス</h4></th>
    <td>
      <% if @item.is_active? %>
       販売中
      <% else %>
       販売停止中
      <% end %>
    </td>
  </tr>

   <tr>
    <td></td>
    <td><%= link_to edit_admin_item_path(@item.id) do %>
    <h3 class="btn btn-success">編集する</h3>
    <% end %>
    </td>
   </tr>
  </table>

  </div>
</div>
