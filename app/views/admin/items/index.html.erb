<div class="container">
  <h1>商品一覧</h1>
  <div class="row">
    <table>
      <thead>
        <tr>
          <th width="70">商品ID</th>
          <th width="150">商品名</th>
          <th width="80">税抜価格</th>
          <th width="150">ジャンル</th>
          <th width="150">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= item.genre_id %></td>
          <td>
            <% if item.is_active? %>
               販売中
              <% else %>
               販売停止中
            <% end %>
          </td>
        </tr>
         <% end %>
      </tbody>
    </table>
  </div>
</div>
