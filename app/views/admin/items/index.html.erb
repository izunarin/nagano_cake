<div class="container">
  <div class="form-inline">
    <h1 class="w-75">商品一覧</h1>
    <%= link_to new_admin_item_path, class: "nav-link text-dark" do %>
      <span><i class="fa-sharp fa-solid fa-plus"></i></span>
    <% end %>
  </div>
  <div class="row">
    <table>
      <thead>
        <tr>
          <th width="100">商品ID</th>
          <th width="250">商品名</th>
          <th width="150">税抜価格</th>
          <th width="250">ジャンル</th>
          <th width="200">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to  admin_item_path(item.id) do %>
            <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active? %>
              販売中
              <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
         <% end %>
      </tbody>
    </table>
    
  </div>
  <%= paginate @items %>
</div>
