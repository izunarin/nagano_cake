<div class="container">
  <div class="row">
    <h1>注文履歴一覧</h1>
    <table border="1" cellpadding="6" cellspacing="0">
      <tr>
        <th>注文日</th>
        <th>配達先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td>
         〒<%= order.postal_code %></br>
          <%= order.address %></br>
          <%= order.name %>
        </td>
        <td><%= @cart_item.item.name %></td>
        <td><%= order.billing %></td>
        <td><%= order.created_at %></td>
        <td>
          <%= link_to public_order_path(current_customer) do %>
          <h3 class="btn btn-primary">表示する</h3>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
 </div>
</div>