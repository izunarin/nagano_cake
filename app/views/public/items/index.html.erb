<div class="container">
  <div class="row">
   
    <div class="col-3">
      <table class="border">
        <tr>
          <th width="200" class="border-bottom text-center">ジャンル検索</th>
        </tr>
         <% @genres.each do |genre| %>
        <tr>
          <th>
            <%= link_to public_items_path(genre_id: genre.id) do %>
            <%= genre.name %>
            <% end %>
          </th>
        </tr>
        <% end %>
      </table>

    </div>

   
     
    <div class="container offset-md-3">
      <h1>商品一覧</h1>
    <div class="row">
        
        <% @items.each do |item| %>
        <div class="col-md-3">
          <%= link_to public_item_path(item.id) do %>
          <%= image_tag item.image, size: "200x200" %>
           <%= item.name %>
          <% end %><br/>
        ￥<%= item.with_tax_price %>
        </div>
         
        <% end %>
        <%= config.default_per_page %>
        </div>
     </div>
    </div>
  </div>
</div>