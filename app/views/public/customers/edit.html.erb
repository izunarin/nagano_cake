<div class="container">
<h2>会員情報編集</h2>
<div class="row">

<%= form_with model: @customer, url: public_customers_path do |f| %>

  <div class="flex-row">
  <table>
    <tr>
      <th width="200">名前</th>
      <td width="70">（姓）</td>
      <td><%= f.text_field :last_name %></td>
      <td width="70">（名）</td>
      <td><%= f.text_field :first_name %></td>
    </tr>

    <tr>
      <th>フリガナ</th>
      <td>（セイ）</td>
      <td><%= f.text_field :last_name_kana %></td>
      <td>（メイ）</td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>

    <tr>
      <th>メールアドレス</th>
      <td></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      <td></td>
    </tr>

    <tr>
      <th>郵便番号（ハイフンなし）</th>
      <td></td>
      <td><%= f.text_field :postal_code %></td>
      <td></td>
    </tr>

    <tr>
      <th>住所</th>
      <td></td>
      <td colspan="3"><%= f.text_field :address,size: "60%" %></td>
    </tr>

    <tr>
      <th>電話番号（ハイフンなし）</th>
      <td></td>
      <td><%= f.text_field :telephone_number %></td>
      <td></td>
    </tr>

    <tr>
      <th></th>
      <td></td>
      <td><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
      <td></td>
      <td>
       <%= link_to public_customers_unsubscribe_path do %>
       <h3 class="btn btn-danger">退会する</h3>
       <% end %>
      </td>
    </tr>
  </table>
<% end %>

</div>
</div>
</div>